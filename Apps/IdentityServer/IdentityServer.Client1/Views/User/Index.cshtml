@using Microsoft.AspNetCore.Authentication;
<a class="btn btn-success" asp-action="GetRefreshToken">Refresh Token Yenile</a>
<a class="btn btn-danger" asp-action="LogOut">Çıkış yap</a>

<h3>Bu sayfası sadece üye olan kullanıcılar görebilir.</h3>
<br />
<h4>Claim Verileri</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Claim Type</th>
            <th>Claim Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in User.Claims)
        {
            <tr>
                <td>@item.Type</td>
                <td>@item.Value</td>
            </tr>
        }
    </tbody>
</table>
<br />
<br />
<h4>Authentication Verileri</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Auth Property key</th>
            <th>Auth Property Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (await Context.AuthenticateAsync()).Properties.Items)
        {
            <tr>
                <td>@item.Key</td>
                <td>@item.Value</td>
            </tr>
        }
    </tbody>
</table>
